  <uses-permission android:name="android.permission.READ_CLIPBOARD" />
  <uses-permission android:name="android.permission.WRITE_CLIPBOARD" />
  <application>
    <activity android:name="com.unity3d.player.appui.AppUIGameActivity" android:theme="@style/BaseUnityGameActivityTheme" android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout" android:launchMode="singleTask">
      <!-- 클립보드 사용을 위한 설정 -->
      <meta-data android:name="unityplayer.SkipPermissionsDialog" android:value="true" />
      <meta-data android:name="android.app.lib_name" android:value="game" />
    </activity>
  </application>
  <uses-permission android:name="android.permission.VIBRATE" />
</manifest>